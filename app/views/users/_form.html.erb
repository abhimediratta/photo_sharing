<%= form_for(@user,:html => {:class => "form-horizontal"}) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li class="bg-danger"><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <div class="col-md-10">
      <%= f.text_field :name,placeholder: "Name",class: "form-control input-md" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-10">
      <%= f.text_field :email,placeholder: "Email",class: "form-control input-md" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-10">
      <%= f.password_field :password,placeholder: "Password",class: "form-control input-md" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-md-10">
      <%= f.password_field :password_confirmation,placeholder: "Password Confirmation",class: "form-control input-md" %>
    </div>
  </div>
  <div class="actions">
    <% if f.object.new_record? %>
      <%= f.submit "Create",class: "btn btn-primary"  %>
    <% else %>
      <%= f.submit "Update",class: "btn btn-primary"  %>
    <% end %>
  </div>
<% end %>
