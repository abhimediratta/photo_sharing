	<fieldset class="col-md-4 sign-in-form">
		<legend>Login to start sharing!</legend>
		<%= form_for(:session,url: sessions_path, :html => {:class => "form-horizontal"}) do |f| %>
			<div class="form-group">
				<div class="col-md-10">
					<%= f.text_field :email,placeholder: "Email",class: "form-control input-md" %>
				</div>
			</div>
			<div class="form-group">
				<div class="col-md-10">
					<%= f.text_field :password, placeholder: "Password",class: "form-control input-md" %>
				</div>
			</div>
			<%= f.submit "Log In",class: "btn btn-primary" %>
		<% end %>
		<p>New User? <%= link_to "Sign Up",new_user_path %></p>
	</fieldset>
