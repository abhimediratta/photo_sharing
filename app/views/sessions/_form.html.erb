<%= form_for(:session,url: sessions_path, :html => {:class => "form-horizontal"}) do |f| %>
	<div class="form-group">
		<div class="col-md-10">
			<%= f.text_field :email,placeholder: "Email",class: "form-control input-md" %>
		</div>
	</div>
	<div class="form-group">
		<div class="col-md-10">
			<%= f.password_field :password, placeholder: "Password",class: "form-control input-md" %>
		</div>
	</div>
	<%= f.submit "Log In",class: "btn btn-primary" %>
<% end -%>
